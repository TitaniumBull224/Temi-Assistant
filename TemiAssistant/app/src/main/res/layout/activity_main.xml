<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello! How are you"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good to go"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

        <TextView
            android:id="@+id/textViewPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Current Postion Goes Here"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_txt" />

        <TextView
            android:id="@+id/userInteraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="User Interaction"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/detectionState"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPosition"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/detectionState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Detection State"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/detectionData"
            app:layout_constraintEnd_toEndOf="@+id/userInteraction"
            app:layout_constraintStart_toStartOf="@+id/userInteraction"
            app:layout_constraintTop_toBottomOf="@+id/userInteraction" />

        <TextView
            android:id="@+id/detectionData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Detection Data"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/posX"
            app:layout_constraintEnd_toEndOf="@+id/userInteraction"
            app:layout_constraintStart_toStartOf="@+id/userInteraction"
            app:layout_constraintTop_toBottomOf="@+id/detectionState" />

        <Button
            android:id="@+id/speak_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speak"
            app:layout_constraintBottom_toTopOf="@+id/record_btn"
            app:layout_constraintEnd_toStartOf="@+id/posX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detectionData" />

        <Button
            android:id="@+id/record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            app:layout_constraintBottom_toTopOf="@+id/detection_btn"
            app:layout_constraintEnd_toEndOf="@+id/speak_btn"
            app:layout_constraintStart_toStartOf="@+id/speak_btn"
            app:layout_constraintTop_toBottomOf="@+id/speak_btn" />

        <Button
            android:id="@+id/detection_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detection"
            app:layout_constraintBottom_toTopOf="@+id/exit_btn"
            app:layout_constraintEnd_toEndOf="@+id/record_btn"
            app:layout_constraintStart_toStartOf="@+id/record_btn"
            app:layout_constraintTop_toBottomOf="@+id/record_btn" />

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:text="Exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--
        <TextView
            android:id="@+id/position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Position"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="297dp" />
-->

        <EditText
            android:id="@+id/posX"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:hint="posX (m)"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/posY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPosition"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/posY"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="posY (m)"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/move_btn"
            app:layout_constraintEnd_toEndOf="@+id/posX"
            app:layout_constraintStart_toStartOf="@+id/posX"
            app:layout_constraintTop_toBottomOf="@+id/posX" />

        <Button
            android:id="@+id/move_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Move"
            app:layout_constraintBottom_toTopOf="@+id/exit_btn"
            app:layout_constraintEnd_toEndOf="@+id/posX"
            app:layout_constraintStart_toStartOf="@+id/posX"
            app:layout_constraintTop_toBottomOf="@+id/posY" />

        <Button
            android:id="@+id/map_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="11dp"
            android:text="Map"
            app:layout_constraintBottom_toTopOf="@+id/exit_btn"
            app:layout_constraintEnd_toEndOf="@+id/move_btn"
            app:layout_constraintStart_toStartOf="@+id/move_btn"
            app:layout_constraintTop_toBottomOf="@+id/posY" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>