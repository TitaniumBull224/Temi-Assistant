<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello! How are you"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good to go"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" />

        <Button
            android:id="@+id/speak_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speak"
            app:layout_constraintBottom_toTopOf="@+id/record_btn"
            app:layout_constraintEnd_toStartOf="@+id/posX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/posX" />

        <Button
            android:id="@+id/record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            app:layout_constraintBottom_toBottomOf="@+id/move_btn"
            app:layout_constraintEnd_toEndOf="@+id/speak_btn"
            app:layout_constraintStart_toStartOf="@+id/speak_btn"
            app:layout_constraintTop_toBottomOf="@+id/speak_btn" />

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:text="Exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--
        <TextView
            android:id="@+id/position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Position"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="297dp" />
-->
        <EditText
            android:id="@+id/posX"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:hint="posX (m)"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPosition" />

        <EditText
            android:id="@+id/posY"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:hint="posY (m)"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/posX"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="@+id/posX"
            app:layout_constraintTop_toBottomOf="@+id/posX" />

        <Button
            android:id="@+id/move_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move"
            app:layout_constraintBottom_toTopOf="@+id/exit_btn"
            app:layout_constraintEnd_toEndOf="@+id/posX"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/posX"
            app:layout_constraintTop_toBottomOf="@+id/posY"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/textViewPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Current Postion Goes Here"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>